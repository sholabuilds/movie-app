<%= form_with(model: @movie) do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title %>

    <%= f.label :description %>
    <%= f.text_area :description, rows: 5 %>
   
    <%= f.label :rating %>
    <%= f.text_field :rating %>

    <%= f.label :release_date %>
    <%= f.date_field :released_on %>
 
    <%= f.label :box_office %>
    <%= f.number_field :total_gross %>

    <%= f.submit %>
<% end %>